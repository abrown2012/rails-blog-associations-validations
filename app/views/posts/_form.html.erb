<%= form_for @post do |f| %>
  <%= f.label "Name:" %>
  <%= f.text_field :name %> <br>

  <%= f.label "Content:" %>
  <%= f.text_area :content %> <br><br>

  <%= f.label "Tags:" %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <%= f.fields_for :tags, @post.tags.build do |tags_fields| %>
    <%= tags_fields.text_field :name %>
  <% end %>

  <br>
  <%= f.submit %>
<% end %>
